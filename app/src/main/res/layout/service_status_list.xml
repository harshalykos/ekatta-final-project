<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="327dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="#FFFAEF"
        app:cardCornerRadius="5dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : 20-04-2022"
            android:textColor="#414A53"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">

        </TextView>
        <TextView
            android:id="@+id/card_service_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service No. : 202201001"
            android:textColor="#414A53"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="12dp">

        </TextView>
        <TextView
            android:id="@+id/card_service_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Category : Electricity"
            android:textColor="#414A53"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="12dp">

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="12dp"
            android:padding="2dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="360dp">

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/ststus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In-process"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="#2D4464">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="#414A53"
            android:textSize="20dp"
            android:layout_marginTop="116dp"
            android:layout_marginLeft="12dp">
        </TextView>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:padding="2dp"
            android:textColor="#414A53"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="12dp">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="225dp"
            app:cardMaxElevation="10dp"
            android:layout_marginLeft="43dp"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pip">

            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>