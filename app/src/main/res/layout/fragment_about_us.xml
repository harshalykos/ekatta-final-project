<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5FAFF"
    tools:context=".AboutUs"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="65dp"
            android:src="@drawable/lofotext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="263dp"
            android:text="Contact us"
            android:textColor="#2D4464"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="297dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal"
            android:layout_marginLeft="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="364dp"
            android:text="connect us at :"
            android:textColor="#625B71"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="36dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="364dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/communication" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="364dp"
            android:layout_marginLeft="199dp"
            android:src="@drawable/instagram" />

        <!-- Visit Us Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="287dp"
            android:layout_height="138dp"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="65dp"
            app:cardBackgroundColor="#DAEDFF"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit Us At"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e-katta.in"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="58dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/visitsite"
                android:layout_width="246dp"
                android:layout_height="29dp"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="21dp"
                android:background="@drawable/registerbg"
                android:text="Visit Website"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- Call Us Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="287dp"
            android:layout_height="138dp"
            android:layout_marginTop="580dp"
            android:layout_marginLeft="65dp"
            app:cardBackgroundColor="#DAEDFF"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9409294950"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="58dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/callus"
                android:layout_width="246dp"
                android:layout_height="29dp"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="21dp"
                android:background="@drawable/registerbg"
                android:text="Call Now"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- Email Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="287dp"
            android:layout_height="138dp"
            android:layout_marginTop="750dp"
            android:layout_marginLeft="65dp"
            app:cardBackgroundColor="#DAEDFF"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email us"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234@gmail.com"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="58dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/emailus"
                android:layout_width="246dp"
                android:layout_height="29dp"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="21dp"
                android:background="@drawable/registerbg"
                android:text="Mail Us"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- Location Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="287dp"
            android:layout_height="138dp"
            android:layout_marginTop="925dp"
            android:layout_marginLeft="65dp"
            app:cardBackgroundColor="#DAEDFF"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:textColor="#625B71"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="13dp" />

            <ImageView
                android:layout_width="211dp"
                android:layout_height="106dp"
                android:src="@drawable/map"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="38dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loc"
                android:layout_width="175dp"
                android:layout_height="21dp"
                android:layout_marginTop="115dp"
                android:layout_marginLeft="56dp"
                android:background="@drawable/registerbg"
                android:text="View location"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false" />

        </androidx.cardview.widget.CardView>

        <!-- Description with See More / See Less -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1100dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,

but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
            android:textColor="#000000"
            android:textAlignment="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="See More"
            android:textColor="#2D4464"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
