<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="5dp"
            android:layout_height="120dp"
            android:background="#2D4464">

        </TextView>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/circle_shape"
            android:padding="2dp" />

        <!-- Right Side: Icons + Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- First Row (Icon + Title) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconUser"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="3dp"
                    android:src="@drawable/profile"
                    />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- Second Row (More Info) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/iconDetails"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="3dp"
                    android:src="@drawable/telephone"
                    />

                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some details here"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Society Maintenance"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="6dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/winga"
                    android:layout_width="61dp"
                    android:layout_height="20dp"
                    android:background="#DAEDFF"
                    android:paddingStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#2D4464"
                    android:text="wing - A"
                    > </TextView>
                <TextView
                    android:id="@+id/wingb"
                    android:layout_width="61dp"
                    android:layout_height="20dp"
                    android:background="#DAEDFF"
                    android:paddingStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#2D4464"
                    android:text="flat - 23"
                    > </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/unpaid_icon"
                android:layout_width="26dp"
                android:layout_height="29dp"
                android:src="@drawable/unpaid">
            </ImageView>
            <TextView
                android:id="@+id/unpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Paid"
                android:textSize="16sp"
                android:textColor="#1C274C"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
