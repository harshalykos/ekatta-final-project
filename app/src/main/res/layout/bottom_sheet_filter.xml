<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/bottom_filter">

    <TextView
        android:id="@+id/filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Search by filters"
        android:textColor="#2D4464"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/filter_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toEndOf="@+id/filter_title"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Filter wing"
            android:textColor="#414A53"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wing1"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg"
                android:gravity="center"
                android:text="wing - A"
                android:textColor="#FFFFFF"> </TextView>

            <TextView
                android:id="@+id/wing2"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="wing - B"
                android:textColor="#2D4464"> </TextView>

            <TextView
                android:id="@+id/wing3"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="wing - C"
                android:textColor="#2D4464"> </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Filter Flat"
            android:textColor="#414A53"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/w1"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg"
                android:gravity="center"
                android:text="1 - 10"
                android:textColor="#FFFFFF"> </TextView>

            <TextView
                android:id="@+id/w2"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="11 -20"
                android:textColor="#2D4464"> </TextView>

            <TextView
                android:id="@+id/w3"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="21 - 30"
                android:textColor="#2D4464">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/w4"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg"
                android:gravity="center"
                android:text="31 - 40"
                android:textColor="#FFFFFF"> </TextView>

            <TextView
                android:id="@+id/w5"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="41- 50"
                android:textColor="#2D4464"> </TextView>

            <TextView
                android:id="@+id/w6"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="50 - 60"
                android:textColor="#2D4464">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
