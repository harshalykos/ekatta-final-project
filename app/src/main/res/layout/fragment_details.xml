<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Details">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 BHK 1103 Sq. Ft. Ind Floor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidco N2 Aurangabad, Maharashtra - 431001"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp" />

    <!-- Price -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 62.83 Lac"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="6dp" />

    <!-- Terms -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Terms And Conditions Apply"
        android:textSize="12sp"
        android:textColor="#888888" />

    <!-- Status -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Developed Project"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black" />

    <!-- Enquiries & Views -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <!-- Enquiries -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/telephone"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="850 Enquiries"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>

        <!-- Views -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/view"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1222 Views"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
