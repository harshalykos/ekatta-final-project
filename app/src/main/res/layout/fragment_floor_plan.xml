<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".Floor_plan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <!-- Download Brochure Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Floor Plans"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#2D4464"
            android:paddingStart="10dp"
            android:background="#DAEDFF"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="10dp"
            android:ellipsize="end"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has..... show more."
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See More"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:textColor="#1976D2"
            android:textStyle="bold" />

        <!-- Building Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Building For Floor Plan"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/btnBuildingA1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Building A1"
                android:backgroundTint="#90CAF9"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btnBuildingA2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Building A2"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btnBuildingA3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Building A3"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Room Size Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Size Of The Room"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btn2BHK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 BHK - 4 Flat Avl"
                android:backgroundTint="#90CAF9"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btn3BHK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 BHK - 8 Flat Avl"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Floor Plan Image -->
        <ImageView
            android:id="@+id/imgFloorPlan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/floor_plan" />

        <!-- Price Section -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 62.83 Lac"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Terms And Condition Apply"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Property Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK 1103 Sq. Ft. Ind Floor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 2 Bedroom"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 1 Kitchen"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 1 Hall"
                android:textSize="13sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 2 Washroom"
                android:textSize="13sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
