<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5FAFF"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="322dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/society_user_dp"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="12dp">
        </ImageView>
        <LinearLayout
            android:id="@+id/linearLayout_society"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55dp"
            android:clickable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/profile">
            </ImageView>
            <TextView
                android:id="@+id/society_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="shivam kumar"
                android:inputType="text"
                android:textColor="#04042F"
                android:textSize="15dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_society2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="55dp"
            android:clickable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/telephone">
            </ImageView>
            <TextView
                android:id="@+id/society_userphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="73979 10090"
                android:inputType="text"
                android:textColor="#04042F"
                android:textSize="15dp">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="20dp"
                    android:background="#DAEDFF"
                    android:paddingStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#2D4464"
                    android:text="wing - A"
                    > </TextView>
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="20dp"
                    android:background="#DAEDFF"
                    android:paddingStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#2D4464"
                    android:text="flat - 23"
                    > </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>